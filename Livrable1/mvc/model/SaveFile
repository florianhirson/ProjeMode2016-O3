import java.io.BufferedWriter;
import java.io.File;
import java.io.IOException;
import java.io.PrintWriter;

import javax.swing.JFileChooser;

public class SavaFile {
	
	/*Je me suis permis de l'implementer regarde sur CourbeMVCMain c'est Ã  la fin*/
	public void save(Courbe<Number,Number> c, String chemin) throws IOException {
		
		String dataX = "";
		String dataY = "";
		
		java.util.Scanner sc = new java.util.Scanner(System.in);
		System.out.println("saisir nom fichier sauvegarde csv :");
		String nameFile = sc.next();
		
		JFileChooser filech = new JFileChooser();
		filech.setSelectedFile(new File(nameFile));
		
		if(filech.showSaveDialog(null)== JFileChooser.APPROVE_OPTION ){
			
			String pathFichier = filech.getSelectedFile().getAbsolutePath();
			System.out.println(pathFichier);
		
			PrintWriter fw = new PrintWriter(nameFile);
			BufferedWriter bw = new BufferedWriter(fw);
			
			for(int i=0;i<c.sizeOfData();i++){
				dataX = dataX + c.getX(i);
				dataY = dataY + c.getY(i);
				bw.write(dataX);
				bw.write(dataY);
			}
			bw.write(nameFile);
			bw.flush(); 
			bw.close(); 
			fw.close();
		}
	}

}